{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": ["esnext"],
    "sourceMap": true,
    "rootDir": ".",
    "baseUrl": "src",
    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "node",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
  },
  "include": ["src"],
}
